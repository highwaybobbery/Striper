source 'https://rubygems.org'

gem 'jquery-rails'
gem 'mysql2'
gem 'rails', '3.2.3'

group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'haml'
  gem 'sass-rails',   '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'cucumber-rails', require:false
  gem 'pry'
  gem 'rspec-rails'
end

group :test do
  gem 'database_cleaner'
  gem 'factory_girl_rails'
  gem 'shoulda-matchers'
end
